				document.write(row[i].firstName);
				document.write("</td>");
				document.write("<td>");
				document.write(row[i].lastName);
				document.write("</td>");
				document.write("<td>");
				document.write(row[i].pincode);
				document.write("</td>");
				document.write("<td>");
				document.write(row[i].designationName);
				document.write("</td>");
				}
				document.write("</tr>");
				}
